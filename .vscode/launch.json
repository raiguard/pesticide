    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pesticide'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pesticide",
                    "--package=pesticide"
                ],
                "filter": {
                    "name": "pesticide",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pesticide'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pesticide",
                    "--package=pesticide"
                ],
                "filter": {
                    "name": "pesticide",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}